<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="SortOfNewCarsApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:SortOfNewCarsApp.Views"
    Shell.FlyoutBehavior="Flyout"
    Title="SortOfNewCarsApp">

   

    <TabBar>
        <Tab Title="Home" Icon="home.svg">
            <ShellContent ContentTemplate="{DataTemplate views:MainPage}" Route="home" />
        </Tab>
        <Tab Title="Inventory" Icon="inventory.svg">
            <ShellContent ContentTemplate="{DataTemplate views:InventoryPage}" Route="inventory" />
        </Tab>
        <Tab Title="Location" Icon="location.svg">
            <ShellContent ContentTemplate="{DataTemplate views:LocationPage}" Route="location"/>
        </Tab>
        
    </TabBar>
    
</Shell>
